@model List<Student>

<h2>Lista de Estudiantes</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Puntaje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var est in Model)
        {
            <tr>
                <td>@est.Name</td>
                <td>@est.Average</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Students" asp-action="Create" class="btn btn-success mt-3">Agregar Estudiante</a>

<hr />

<h2>Top 3 Estudiantes</h2>

<!-- Los estudiantes deben implementar correctamente en el controller 
     la función que genera este ViewBag.Top3 -->
@if (ViewBag.Top3 != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Puntaje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var top in ViewBag.Top3)
            {
                <tr>
                    <td>@top.Name</td>
                    <td>@top.Average</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p style="color: red;">Top 3 no disponible — revisar controlador</p>
}